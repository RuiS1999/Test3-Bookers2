<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'side' %>

<div class="col-md-8 offset-md-1">
    <h1>Users</h1>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to image_tag(user.get_profile_image(100,100)), user_path(user.id) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show","/users/#{user.id}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

