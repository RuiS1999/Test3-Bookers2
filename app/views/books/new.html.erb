<div>
<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
  <table>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name%></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>

<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <div>
      <h4><%= f.label  :title %></h4>
      <%= f.text_field :title %>
    </div>
    <div>
      <h4><%= f.label :body %></h4>
      <%= f.text_area :body %>
    </div>
    <div><%= f.submit 'Create Book' %></div>
  <% end %>
</div>